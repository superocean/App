@model XPGroup.Models.NewsCategory
@{
    ViewBag.Title = "Edit";
}

<div class="content-box">
    <!-- Start Content Box -->

    <div class="content-box-header">

        <h3>Edit category</h3>
    </div>

    <div class="content-box-content">

        <div class="tab-content default-tab">
            <!-- This is the target div. id must match the href of this div's tab -->
            @using (@Html.BeginForm())
            {

                @Html.HiddenFor(c => c.CategoryId);
                <p>
                    <label>Category name</label>
                    @Html.TextBoxFor(c => c.Name, new { @class = "text-input large-input" })
                    @Html.ValidationMessageFor(c => c.Name)
                </p>
                <p>
                    <label>Parent Category</label>
                    @Html.ParentChildDropdownlistFor(c => c.ParentId, (List<SelectListItemParent>)ViewBag.Categories, new { @class = "dropdownlist" }, "ddlparent", "ddlchild", true, "--Root category--", false)
                </p>
                <p>
                    <label>Description</label>
                    @Html.TextAreaFor(c => c.Description, new { @class = "text-input textarea" })
                </p>
                <p>
                    <label>Sort Order</label>
                    @Html.TextBoxFor(c => c.SortOrder, new { @class = "text-input large-input" })
                    @Html.ValidationMessageFor(c => c.SortOrder)
                </p>
                <div class="button_bottom">
                    <div class="listbutton">
                        <input type="submit" value="Save" class="button" />
                    </div>

                    <div class="listbutton">
                        <a href="/Admin/NewsCategory" class="button_cancel">Cancel</a>
                    </div>
                </div>
            }
            <div class="clear">&nbsp;</div>
        </div>
    </div>
</div>