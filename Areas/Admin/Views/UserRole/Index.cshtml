@using XPGroup.Models
@model List<UserRole>
@{
    ViewBag.Title = "Index";
}

<div class="content-box">
    <!-- Start Content Box -->
    <div class="content-box-header">
        <h3>User Role</h3>
    </div>
    <div class="content-box-content">

        <div class="tab-content default-tab">
            <div class="notification attention png_bg" style="display: none">
                <a href="#" class="close">
                    <img src="/Content/images/admin/icons/cross_grey_small.png" title="Close this notification" alt="close" /></a>
                <div id="message_notification">
                </div>
            </div>
            <table class="admin_management">

                <thead>
                    <tr>
                        <th>Role Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (UserRole userRole in @Model)
                    {
                        <tr>
                            <td>@userRole.RoleName</td>
                            <td>
                                <!-- Icons -->
                                <a href="/Admin/UserRole/Edit/@userRole.RoleId" title="Edit">
                                    <img src="/Content/images/admin/icons/pencil.png" class="edit_category" alt="Edit" /></a>
                                <a class="delete" ref="/Admin/UserRole/Delete" href="@userRole.RoleId" title="Delete">
                                    <img src="/Content/images/admin/icons/cross.png" alt="Delete" /></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="clear"></div>
            <p class="button_wrapper"><a href="/Admin/UserRole/Add" class="button" title="Add new role">Add role</a></p>
        </div>
    </div>
</div>