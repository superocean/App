@model List<XPGroup.Models.Attribute>
@using XPGroup.Models
@{
    ViewBag.Title = "Index";
}
<div class="content-box">
    <!-- Start Content Box -->

    <div class="content-box-header">

        <h3>Attribute</h3>
    </div>

    <div class="content-box-content">

        <div class="tab-content default-tab">
            <!-- This is the target div. id must match the href of this div's tab -->

            <div class="notification attention png_bg" style="display: none">
                <a href="#" class="close">
                    <img src="/Content/images/admin/icons/cross_grey_small.png" title="Close this notification" alt="close" /></a>
                <div id="message_notification">
                </div>
            </div>
            <table class="admin_management">

                <thead>
                    <tr>
                        <th>Attribute Name</th>
                        <th>Default Value</th>
                        <th>Category Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var attr in @Model)
                    {
                        <tr>
                            <td>@attr.Name</td>
                            <td>@attr.Value</td>
                            <td>@attr.Category.Name</td>
                            <td>
                                <!-- Icons -->
                                <a href="/Admin/Attribute/Edit/@attr.AttributeId.ToString()" title="Edit">
                                    <img src="/Content/images/admin/icons/pencil.png" class="edit_category" alt="Edit" /></a>
                                <a class="delete" ref="/Admin/Attribute/Delete" href="@attr.AttributeId.ToString()" title="Delete">
                                    <img src="/Content/images/admin/icons/cross.png" alt="Delete" /></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <p class="button_wrapper"><a href="/Admin/Attribute/Add" class="button" title="Add new Attribute">Add Attribute</a></p>
        </div>
    </div>
</div>