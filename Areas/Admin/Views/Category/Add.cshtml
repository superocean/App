@model XPGroup.Models.Category
@using XPGroup.Models
@{
    ViewBag.Title = "Add";
}
<div class="content-box">
    <!-- Start Content Box -->

    <div class="content-box-header">

        <h3>Add Category</h3>
        <ul class="content-box-tabs">
            <li><a href="#tab1" class="default-tab">Category</a></li>
        </ul>

        <div class="clear"></div>
    </div>

    <div class="content-box-content">
        @using (@Html.BeginForm())
        {
            <div class="tab-content default-tab" id="tab1">

                <p>
                    <label>Category name</label>
                    @Html.TextBoxFor(c => c.Name, new { @class = "text-input large-input" })
                    @Html.ValidationMessageFor(c => c.Name)
                </p>
                <p>
                    <label>Parent Category</label>
                    @Html.ParentChildDropdownlistFor(c => c.CategoryId, (List<SelectListItemParent>)ViewBag.Categories, new { @class = "dropdownlist" }, "ddlparent", "ddlchild", false, "--Root category--", true)
                </p>
                <p>
                    <label>Description</label>
                    @Html.TextBoxFor(c => c.Description, new { @class = "text-input large-input" })
                    @Html.ValidationMessageFor(c => c.Description)
                </p>
            </div>
            <div class="button_bottom">
                <div class="listbutton">
                    <input type="submit" value="Save" class="button" />
                </div>

                <div class="listbutton">
                    <a href="/Admin/Category" class="button_cancel">Cancel</a>
                </div>
            </div>
        }
    </div>
</div>