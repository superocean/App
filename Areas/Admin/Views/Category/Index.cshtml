@model List<XPGroup.Models.ViewModels.ParentChildCategory>
@using XPGroup.Models.ViewModels
@{
    ViewBag.Title = "Index";
}
<div class="content-box">
    <!-- Start Content Box -->

    <div class="content-box-header">

        <h3>Category</h3>
    </div>

    <div class="content-box-content">

        <div class="tab-content default-tab">
            <!-- This is the target div. id must match the href of this div's tab -->

            <div class="notification attention png_bg" style="display: none">
                <a href="#" class="close">
                    <img src="/Content/images/admin/icons/cross_grey_small.png" title="Close this notification" alt="close" /></a>
                <div id="message_notification">
                </div>
            </div>
            <table class="admin_management">

                <thead>
                    <tr>
                        <th>Position</th>
                        <th>Category Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var parent in @Model)
                    {
                        <tr>
                            <td>
                                <input type="text" class="input_sortorder" value="@parent.SortOrder.ToString()" /></td>
                            <td>@parent.Name</td>
                            <td>@parent.Description</td>
                            <td>
                                <!-- Icons -->
                                <a href="/Admin/Category/Edit/@parent.CategoryId.ToString()" title="Edit">
                                    <img src="/Content/images/admin/icons/pencil.png" class="edit_category" alt="Edit" /></a>
                                <a class="delete" ref="/Admin/Category/Delete" href="@parent.CategoryId.ToString()" title="Delete">
                                    <img src="/Content/images/admin/icons/cross.png" alt="Delete" /></a>
                                <a class="updatePosition" href="@parent.CategoryId.ToString()" title="Update position">
                                    <img src="/Content/images/admin/icons/tick_circle.png" alt="Update" />
                                </a>
                            </td>
                        </tr>
                        foreach (var child in parent.ChildCategories)
                        {
                        <tr class="child">
                            <td>
                                <input type="text" class="input_sortorder" value="@child.SortOrder.ToString()" /></td>
                            <td class="name_child">@child.Name</td>
                            <td>@child.Description</td>
                            <td>
                                <!-- Icons -->
                                <a href="/Admin/Category/Edit/@child.CategoryId.ToString()" title="Edit">
                                    <img src="/Content/images/admin/icons/pencil.png" class="edit_category" alt="Edit" /></a>
                                <a class="delete" ref="/Admin/Category/Delete" href="@child.CategoryId.ToString()" title="Delete">
                                    <img src="/Content/images/admin/icons/cross.png" alt="Delete" /></a>
                                <a class="updatePosition" href="@child.CategoryId.ToString()" title="Update position">
                                    <img src="/Content/images/admin/icons/tick_circle.png" alt="Update" />
                                </a>
                            </td>
                        </tr>
                        }
                    }
                </tbody>
            </table>
            <p class="button_wrapper"><a href="/Admin/Category/Add" class="button" title="Add new category">Add Category</a></p>
        </div>
    </div>
</div>